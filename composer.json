{
  "name": "llm/mcp-server",
  "description": "PHP SDK for building MCP servers",
  "keywords": [],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Kyrian Obikwelu",
      "email": "koshnawaza@gmail.com"
    },
    {
      "name": "Pavel Buchnev",
      "email": "butschster@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.3",
    "php-mcp/schema": "^1.0",
    "psr/clock": "^1.0",
    "psr/container": "^1.0 || ^2.0",
    "psr/log": "^1.0 || ^2.0 || ^3.0",
    "psr/http-server-middleware": "^1.0 || ^2.0 || ^3.0",
    "psr/simple-cache": "^1.0 || ^2.0 || ^3.0",
    "react/event-loop": "^1.5",
    "react/http": "^1.11",
    "react/promise": "^3.0",
    "react/stream": "^1.4"
  },
  "require-dev": {
    "spiral/code-style": "^2.2",
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^10.5",
    "rector/rector": "^2.1",
    "vimeo/psalm": "^6.0",
    "react/async": "^4.0",
    "react/child-process": "^0.6.6"
  },
  "suggest": {
    "ext-pcntl": "For signal handling support when using StdioServerTransport with StreamSelectLoop"
  },
  "autoload": {
    "psr-4": {
      "Mcp\\Server\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mcp\\Server\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "cs:fix": "php-cs-fixer fix -v",
    "psalm": "psalm",
    "psalm:baseline": "psalm --set-baseline=psalm-baseline.xml",
    "refactor": "rector process --config=rector.php",
    "refactor:ci": "rector process --config=rector.php --dry-run --ansi",
    "test": "phpunit",
    "test-coverage": "phpunit --coverage"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
